<link rel="stylesheet" href="/css/home.css">
<h1>
    ReachMe/<%= title %>  
</h1>
<%if(locals.user){%>

    <div class="post-form">
        <form action="/posts/create" id="new-post-form" method="post">
            <textarea name="content" id="new-post-content" cols="30" rows="5" placeholder="What's in your mind!!" required></textarea>
            <button type="submit">Post</button>
        </form>
    </div>
    

    <div class="post-list-items">
        <ul>
            <p>
                <%for(let i of post){%>
                    <li>
                        <%if( locals.user && locals.user.id==i.user.id ){%>
                            <p>
                                <a href="/posts/destroy/<%= i._id %>">X</a>
                            </p>
                        <%}%>
                        <h5>
                            <%= i.user.name %>
                        </h5>
                        <%= i.content %>
                    

                        <ul>
                            <%for(let comment of i.comments){%>
                                <%if(locals.user && locals.user.id==comment.user.id){%>
                                    <a href="/comments/destroy/<%= comment._id %>">X</a>
                                <%}%>
                                <small>
                                    <b>
                                        <%= comment.user.name %>
                                    </b>
                                </small>
                                <p>
                                    <%= comment.content %>
                                </p>
                                
                            <%}%>
                        </ul>
                   
                        <form action="/comments/create" id="add-comment-form" method="post">
                            <input type="text" name="content" placeholder="Add a Comment..." required>
                            <input type="hidden" name="post" value= <%= i._id %> >
                            <button type="submit" >Send</button>
                        </form> 
                    </li> 
                <%}%>
            </p>
            
        </ul>
        
    </div>
    

<%}%>
